<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0/EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hw649.sources_share.mapper.UserMapper">
    <select id="selectUserByName" parameterType="String" resultType="User">
        select * from sourceshare.user where name = #{name}
    </select>

    <select id="selectUserByEmail" parameterType="String" resultType="User">
        select * from sourceshare.user where email = #{email}
    </select>

    <insert id="insertUser" parameterType="User">
        insert sourceshare.user(email,name,pwd,time,perms,signature,age)
        values(#{email},#{name},#{pwd},#{time},#{perms},#{signature},#{age})
    </insert>
</mapper>