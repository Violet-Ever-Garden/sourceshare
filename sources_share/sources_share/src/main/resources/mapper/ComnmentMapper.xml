<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0/EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hw649.sources_share.mapper.CommentMapper">
    <insert id="insertComment" parameterType="Comment">
        insert sourceshare.comment(auth,passage,text,time)
        values(#{auth},#{passage},#{text},#{time})
    </insert>
    
    <select id="selectCommentByPassage" parameterType="int" resultType="Comment">
        select * from sourceshare.comment where passage = #{passage} order by time desc
    </select>

    <select id="selectCommentNum" parameterType="int" resultType="int">
        select COUNT(*) sourceshare.comment where passage = #{passage}
    </select>

    <select id="selectCommentByAuth" parameterType="String" resultType="Comment">
        select * from sourceshare.comment where auth = #{auth};
    </select>
</mapper>